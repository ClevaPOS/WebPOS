{% extends 'POSBundle:Default:index.html.twig' %}

{% block title %}My cool blog posts{% endblock %}

{% block content %}Test Hello{% endblock %}

{% block message %}
    {% for flashMessage in app.session.flashbag.get('notice') %}
     <div class="alert alert-warning">{{ flashMessage }}</div>
    {% endfor %}
{% endblock %}



{% block category_list %}
    {{ form_start(form) }}
    {# render the task's only field: description #}

    <h3>Cateogry List</h3>
    <span></span>
    <ul class="cateogry-list">
        {# iterate over each existing tag and render its only field: name #}
        {% for category in form.categories %}
            <li>{{ form_row(category.name) }}</li>
            <li>{{ form_widget(category.submit, { 'label': 'Remove' }) }}</li>
        {% endfor %}
    </ul>
    {{ form_end(form) }}

{% endblock %}


